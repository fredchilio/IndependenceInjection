@page "/counter"
@inject SeriveSingleton singleton
@inject ServiceTransient transient
@inject ServiceScoped scoped

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<hr />
<p>Singleton Count : @singleton.Valor</p>
<p>transient Count : @transient.Valor</p>
<p>scoped Count : @scoped.Valor</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        singleton.Valor = currentCount;
        transient.Valor = currentCount;
        scoped.Valor = currentCount;
    }
}
